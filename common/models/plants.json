{
  "name": "Plants",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "plantName": {
      "type": "string"
    },
    "plantDate": {
      "type": "date"
    },
    "espId": {
      "type": "string",
      "required": true,
      "index": {"unique": true}
    },
    "room": {
      "type": "string"
    },
    "soilMoisture": {
      "type": "number"
    },
    "humidity": {
      "type": "number"
    },
    "plantPic": {
      "type": "any"
    }
  },
  "validations": [],
  "relations": {
    "member": {
      "type": "belongsTo",
      "model": "Member",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
